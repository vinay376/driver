            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            app:otp_box_background="@drawable/otp_back"
            app:otp_box_background_error="@drawable/otp_back_in_error"
            app:otp_box_background_inactive="@drawable/otp_back_in_active"
            app:otp_box_background_success="@drawable/otp_back_in_success"
            app:otp_box_background_active="@drawable/otp_back_active"

            app:bar_inactive_color="@color/green"
            app:bar_active_color="@color/blue"
            app:bar_error_color="@color/text_hint"

            app:height="40dp"
            app:width="40dp"
            app:bar_enabled="false"
            app:bar_height="2dp"
            app:length="4"

            app:otp="1234"
            app:otp_text_size="24dp"/>


